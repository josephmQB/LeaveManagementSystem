@model LeaveManagementSystem.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="mx-auto login-box" style="width:600px">
            <h4>Login</h4>
            <form action="/account/login" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group mr-3">
                    <label for="email" class="mr-1">Email:</label>
                    <input type="email" class="form-control" id="email" name="Email"  autofocus="autofocus" >                    
                </div>

                <div class="form-group mr-3">
                    <label for="pwd" class="mr-1">Password:</label>
                    <input type="password" class="form-control" id="pwd" name="Password"  minlength="6">                    
                </div>

                <button class="btn btn-success">Login</button>
                <div class="text-danger">
                    @Html.ValidationSummary()
                </div>
            </form>
        </div>
    </div>
</div>
